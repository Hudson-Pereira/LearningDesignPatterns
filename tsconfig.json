{
    "compilerOptions":{
        "target":"ES2022",
        "module":"CommonJs",
        "libs":["ESNext","DOM"],
        "outDir":"./dist",
        "rootDir":"./src",
        "removeComments":true,
        "noEmitOnError": true,
        "strict":true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include":[
        "./src"
    ]
}